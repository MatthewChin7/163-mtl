generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // Connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // Direct connection
}

// Enums
enum UserRole {
  ADMIN
  REQUESTOR
  APPROVER_AS3
  APPROVER_S3
  APPROVER_MTC
}

enum IndentStatus {
  DRAFT
  PENDING_REQUESTOR
  PENDING_AS3
  PENDING_S3
  PENDING_MTC
  APPROVED
  CANCEL_PENDING_AS3
  CANCEL_PENDING_S3
  CANCEL_PENDING_MTC
  REJECTED
  CANCELLED
}

enum VehicleType {
  OUV
  S_OUV
  LUV
  MSV_8x8
  LM_8x8
  DLS_8x8
  MWEC_8x8
  TCP_6x6
  GS_6TON
  SKIDTANKER_5TON
  GP_CAR
  MINIBUS
  OTHER
}

// Models

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String    // Hashed
  role          UserRole  @default(REQUESTOR)
  rank          String?
  unit          String?   @default("163 SQN")
  image         String?   // Profile picture URL or Base64
  status        String    @default("PENDING") // ACTIVE, PENDING, REJECTED
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  indents       Indent[]
  roleRequests  RoleRequest[]
}

model Indent {
  id            String    @id @default(cuid())
  serialNumber  Int       @default(autoincrement())
  
  // Relations
  requestor     User      @relation(fields: [requestorId], references: [id])
  requestorId   String

  // Core Data
  status        IndentStatus @default(DRAFT)
  vehicleType   String // Changed from Enum to String for dynamic config
  vehicleTypeOther String?
  vehicleNumber String?
  equipmentNumber String?

  startTime     DateTime
  endTime       DateTime
  
  // Locations
  startLocationCategory String
  startLocation         String
  startLocationOther    String?
  
  endLocationCategory   String
  endLocation           String
  endLocationOther      String?
  
  // JSON Fields for complexity
  waypoints     Json?     // Stored as Array of Waypoint objects
  approvalLogs  Json?     // Stored as Array of Logs

  // Details
  purpose       String
  typeOfIndent  String    // MTC_SUPPORT, SELF_DRIVE etc
  
  // Personnel
  vehicleCommanderName String
  transportOperator    String?
  
  reason               String?
  specialInstructions  String?
  cancellationReason   String?

  // RPL
  rplTimingDepart      String?
  rplTimingArrive      String?
  rplTiming            String?
  parkingLotNumber     String?

  // Approval Workflow Fields
  editorRole           UserRole?     // Role of the person who made the edit/suggestion
  previousStatus       IndentStatus? // To restore status or track history

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model RoleRequest {
  id            String    @id @default(cuid())
  user          User      @relation(fields: [userId], references: [id])
  userId        String
  
  currentRole   UserRole
  requestedRole UserRole
  status        String    @default("PENDING") // PENDING, APPROVED, REJECTED
  
  createdAt     DateTime  @default(now())
}

// Duty Roster for MTC Schedule
model DutyRoster {
  id        String   @id @default(cuid())
  date      DateTime @unique
  rankName  String   // e.g. "LCP Tan"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



// Forgot Password Token
model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())
}

// --- Dynamic Configuration Models ---

model SystemSetting {
  key         String   @id
  value       String
  description String?
  updatedAt   DateTime @updatedAt
}

model VehicleConfig {
  id        String   @id @default(cuid())
  name      String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

model LocationConfig {
  id                  String   @id @default(cuid())
  name                String   @unique
  category            String   // IN_CAMP, OUT_CAMP
  restrictedAuthority String?  // e.g. "160SQN"
  isActive            Boolean  @default(true)
  createdAt           DateTime @default(now())
}

model RPLSchedule {
  id        String   @id @default(cuid())
  time      String   // e.g. "11:45am"
  type      String   // ARRIVE, DEPART
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}
